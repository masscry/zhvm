################################################################################
#                 SIMPLE COUNTER PROGRAM                                       #
################################################################################

# START PROGRAM
$p = add[,16]    # 0000: JUMP TO MAIN

# DATA SEGMENT
nop[]            # 0004: VAL-000
nop[]            # 0008: VAL-001
nop[]            # 0012: VAL-002
nop[]            # 0016: VAL-003


# MAIN

$a = add[,0]     # 0020: A = 0 
$b = add[,8000]  # 0024: B = 30000
$a = add[,$a+1]  # 0028: A = A + 1
$b = sub[$b,1]   # 0032: B = B - 1
$p = cmn[$b,24]  # 0036: if (B != 0) P = 28
hlt[]            # 0040: HALT
